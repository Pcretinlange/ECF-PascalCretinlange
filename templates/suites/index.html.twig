{% extends 'base.html.twig' %}

{% block title %}Nos Suites{% endblock %}

{% block body %}
<main>
    <div class="row  justify-content-center text-center">
        <h3 class="col-md-4 mt-5 mb-2">{{hoteltitle.hotels }}</h3>
    </div>
    <article class="row justify-content-center">{% for suite in suites %}
        <section class="seaview col-md-4 d-flex flex-column text-center p-4 align-items-center m-5">
            <h4 class="mt-2 mb-2">{{ suite.title }}</h4>

            <div id="suite{{suite.id}}" class="carousel slide mt-2 mb-4" data-bs-ride="carousel">
               <div class="carousel-inner">
                    {% for image in suite.images %}
                        <div class="carousel-item {% if loop.index==1 %}active{% endif %}">
                            <img src="{{ asset('img/'~ image.bin)}}" alt="{{ suite.title }}" class="d-block w-100 card-img">
                        </div>
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#suite{{suite.id}}" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#suite{{suite.id}}" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <p>{{suite.description }}</p>
            <a href="{{path('app_reservations', {hotel:suite.hotels.id, suite:suite.id})}}" class="btn bg-dark text-white w-15">Consulter les disponibilit√©s</a>
            <br>
            <a href="{{suite.bookinglink}}" class="btn bg-dark text-white w-15" target="_blank">Lien Booking.com</a>
        </section>{% endfor %}
    </article>
{% endblock %}


